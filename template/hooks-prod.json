[
	{
		"id": "content-pull-webhook",
		"execute-command": "/usr/local/shared/build-site.sh",
		"command-working-directory": "/mnt/chaos/content",
    "pass-arguments-to-command": [
    {
      "source": "payload",
      "name": "ref"
    }
    ],
		"trigger-rule": {
      "and": [
        {
          "match": {
            "type": "value",
            "value": "refs/heads/master",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        },
        {
          "match": {
            "type": "payload-hmac-sha1",
            "secret": "${PRD_WEBHOOK_SECRET}",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  },
	{
		"id": "theme-pull-webhook",
		"execute-command": "/usr/local/shared/build-site.sh",
		"command-working-directory": "/mnt/chaos/themes/chaos",
		"trigger-rule": {
      "and": [
        {
          "match": {
            "type": "value",
            "value": "refs/heads/master",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        },
        {
          "match": {
            "type": "payload-hmac-sha1",
            "secret": "${PRD_WEBHOOK_SECRET}",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
	}
]
